<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_0201216_105027"
    android:hapticFeedbackEnabled="false"
    tools:context=".view.RegisterActivity">

    <Button
        android:id="@+id/button_register_regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="200dp"
        android:background="@color/blueColor"
        android:paddingLeft="30sp"
        android:paddingTop="10sp"
        android:paddingRight="30sp"
        android:paddingBottom="10sp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_retypePass_regis" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_facility_login"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/changa"
        android:text="Register new account"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_fullname_regis"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:hint="Full name..."
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toTopOf="@+id/editText_phone_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/editText_phone_regis"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:hint="Phone number (Like as +84...)"
        android:inputType="phone"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toTopOf="@+id/editText_email_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_fullname_regis" />

    <EditText
        android:id="@+id/editText_pass_regis"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toTopOf="@+id/editText_retypePass_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_email_regis" />

    <EditText
        android:id="@+id/editText_email_regis"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:hint="Email..."
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toTopOf="@+id/editText_pass_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_phone_regis" />

    <EditText
        android:id="@+id/editText_retypePass_regis"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:hint="Retype password..."
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toTopOf="@+id/button_register_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_pass_regis" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:text="\u00a9 2020 G.C / 2013 E.C"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_register_regis" />

</androidx.constraintlayout.widget.ConstraintLayout>